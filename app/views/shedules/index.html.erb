<div class="container">
  <div class="page-header" id="banner">
    <div class="row">
      <div class="col-lg-12">
        <h1>Список экскурсий</h1>
        <table class="table table-hover table-bordered">
          <tr>
            <th>Название</th>
            <th>Описание</th>
            <th></th>
            <th></th>
            <th></th>
          </tr>
          <% @shedules.each do |shedule| %>
            <tr>
              <td><%= shedule.datetimetour %></td>
              <td><%= shedule.countplace %></td>
              <td><%= link_to 'Показать', tour_path(tour) %></td>
              <td><%= link_to 'Редактировать', edit_tour_path(tour) %></td>
              <td><%= link_to 'Удалить', tour_path(tour),
                              method: :delete,
                              data: {confirm: 'Вы уверены?'} %></td>
            </tr>
          <% end %>
        </table>
      </div>
    </div>
    <div class="col-lg-4 col-md-5 col-sm-6">
    </div>
  </div>
</div>