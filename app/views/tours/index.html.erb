<h1>Список экскурсий</h1>

<table class="table table-hover">
  <tr>
    <th>Название</th>
    <th>Описание</th>
    <th></th>
  </tr>

  <% @tours.each do |tour| %>
    <tr>
      <td><%= tour.title %></td>
      <td><%= tour.description %></td>
      <td><%= link_to 'Показать', tour_path(tour) %></td>
      <td><%= link_to 'Редактировать', edit_tour_path(tour) %></td>
    </tr>
  <% end %>
</table>