<%= render 'layouts/mainmenu' %>
<div class="container">
  <div class="page-header" id="banner">
    <div class="row">
      <div class="col-lg-12">
        <h1>Список экскурсий</h1>
        <%= will_paginate %>

        <table class="table table-hover table-bordered">
          <tr>
            <th>Название</th>
            <!--            <th>Описание</th>-->
            <th></th>
            <% if logged_in? %>
              <th></th>
              <th></th>
            <% end %>

          </tr>
          <% @tours.each do |tour| %>
            <tr>
              <td><%= link_to tour.title, tour_path(tour) %></td>
              <!--              <td><%#= tour.description.html_safe %></td>-->
              <td><%= link_to 'Показать', tour_path(tour) %></td>
              <% if logged_in? %>
                <td><%= link_to 'Редактировать', edit_tour_path(tour) %></td>
                <td><%= link_to 'Удалить', tour_path(tour),
                                method: :delete,
                                data: {confirm: 'Вы уверены?'} %></td>
                </tr>
              <% end %>
          <% end %>

        </table>
        <%= will_paginate %>

      </div>
    </div>
    <div class="col-lg-4 col-md-5 col-sm-6">
    </div>
  </div>
</div>
