<%= render 'layouts/mainmenu' %>
<div class="container">
  <div class="page-header" id="banner">
    <div class="row">
      <div class="col-lg-12">
        <div class="row" style="margin-top: 50px">
          <% flash.each do |message_type, message| %>
            <div class="alert alert-<%= message_type %>"><%= message %></div>
          <% end %>
        </div>
        <h1>Название экскурсии:
          <%= @tour.title %>
        </h1>
        <p>
          <strong>Описание экскурсии:</strong>
          <%= @tour.description.html_safe %>
        </p>
        <% if logged_in? %>
          <%= link_to 'Редактировать', edit_tour_path(@tour) %> |
          <%= link_to 'К списку экскурсий', tours_path %>
        <% end %>
      </div>
    </div>
    <div class="col-lg-4 col-md-5 col-sm-6">
    </div>
  </div>
</div>